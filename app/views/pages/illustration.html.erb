<!-- Finestra modale -->
<div id="modal-container" class="modal-container">
  <div class="modal-content">
    <span class="close" onclick="closeModal()">&times;</span>
    <img id="modal-image" class="modal-img">
  </div>
</div>
</div>

<script>
  // JavaScript per aprire la finestra modale e visualizzare l'immagine a schermo intero
document.querySelectorAll('.illustration-image').forEach(item => {
  item.addEventListener('click', event => {
    const modal = document.getElementById('modal-container');
    const modalImg = document.getElementById('modal-image');
    modalImg.src = event.target.src;
    modal.style.display = "flex";
  });
});

// Chiudi la finestra modale quando l'utente clicca sul pulsante di chiusura
function closeModal() {
  const modal = document.getElementById('modal-container');
  modal.style.display = "none";
}

</script>
